{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@components": [
        "./src/components/*"
      ],
      "public/*": [
        "./public/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src",
    "./src/types.d.ts",
    "./src/config.d.ts"
  ]
}
